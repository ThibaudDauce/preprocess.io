<?php

namespace Preprocess\Responder;

use Aerys\Request;
use Aerys\Response;

use function Amp\File\get;

class PlainEmbedResponder
{
    use Responds;

    public function run(Request $request, Response $response)
    {
        static $contents;

        if (!$contents) {
            $contents = await get(BASE_PATH . "/public/plain-embed.html");
        }

        $response->end($contents);
    }
}
