{
    "scripts": {
        "serve": "aerys -d -c bootstrap/app.php",
        "serve:watch": "scripts/serve-watch",
        "build": "docker build -t preprocess ."
    },
    "require": {
        "amphp/aerys": "^0.4.7",
        "amphp/file": "^0.1.3",
        "amphp/process": "^0.1.3",
        "pre/async": "^0.7.2",
        "pre/class-accessors": "^0.6.4",
        "pre/collections": "^0.2.2",
        "pre/short-closures": "^0.5.2",
        "vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Preprocess\\": "app"
        }
    },
    "require-dev": {
        "yosymfony/resource-watcher": "^1.2"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
